<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.LoginActivity"
    android:background="@color/colorPrimaryLight"
    android:id="@+id/login_relative_layout">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/main_toolbar"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/login_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_toolbar">

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/login_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/login_drawer"
        android:minWidth="280dp"
        android:maxWidth="280dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryDark"
        app:menu="@menu/login_nav_drawer"
        app:headerLayout="@layout/login_drawer_header"/>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>